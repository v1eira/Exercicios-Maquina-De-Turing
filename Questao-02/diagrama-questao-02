digraph finite_state_machine {
	rankdir=LR size="8,5"
	node [shape=doublecircle]
	qaccept
	node [shape=circle]
	q0 -> q1 [label = "a/X R"]
	q1 -> q1 [label = "a/a R"]
	q1 -> q2 [label = "b/Y R"]
	q2 -> q2 [label = "b/b R"]
	q2 -> q3 [label = "c/Z L"]
	q3 -> q3 [label = "Z/Z L\n b/b L\n Y/Y L\n a/a L"]
	q3 -> q0 [label = "X/X R"]
	q0 -> q4 [label = "Y/Y R"]
	q4 -> q4 [label = "Y/Y R\n Z/Z R"]
	q4 -> qaccept [label = "B/B R"]
}